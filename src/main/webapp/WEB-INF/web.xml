<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>com.infopuls.tash.slownews.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.infopuls.tash.slownews.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>com.infopuls.tash.slownews.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsController</servlet-name>
        <servlet-class>com.infopuls.tash.slownews.controllers.NewsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArchiveNewsController</servlet-name>
        <servlet-class>com.infopuls.tash.slownews.controllers.ArchiveNewsController</servlet-class>
    </servlet>
    <!--<servlet>-->
        <!--<servlet-name>LastNewsController</servlet-name>-->
        <!--<servlet-class>com.infopuls.tash.controllers.LastNewsController</servlet-class>-->
    <!--</servlet>-->

    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsController</servlet-name>
        <url-pattern>/newsItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArchiveNewsController</servlet-name>
        <url-pattern>/archive</url-pattern>
    </servlet-mapping>
